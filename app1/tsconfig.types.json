{
  // Change this to match your project
  "include": [
    "src/**/*"
  ],
  "compilerOptions": {
    "allowJs": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "types",
    "declarationMap": false,
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true,
    "target": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": false
  }
}
